{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "eslint modules",
            "type": "shell",
            "command": "${workspaceFolder}/node_modules/.bin/eslint",
            "windows": {
                "command": "${workspaceFolder}\\node_modules\\.bin\\eslint"
            },
            "args": [
              "modules/**/lib/*.js"
            ],
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}
